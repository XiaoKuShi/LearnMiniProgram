<!-- 能遍历数组、字符串、数字 -->
<view wx:for="{{['a','b','c']}}" wx:key="index">{{item}}</view>
<view wx:for="mark" wx:key="index">{{item}}</view>
<view wx:for="{{3}}" wx:key="index">{{item}}</view>