<!-- 1.基础用法: 容器 -->
<!-- 块级元素，独占一行 -->
<view>123</view>
<view>456</view>

<!-- 2.hover-class: 用户按下时显示的样式 -->
<view class="box1" hover-class="view1-hover" hover-stay-time="0">box1</view>

<!-- 3.hover-stop-propagation: 阻止祖先节点冒泡 -->
<view class="box2" hover-class="view2-hover" hover-stay-time="0">
  <view class="box1" hover-class="view1-hover" hover-stay-time="0" hover-stop-propagation>box1</view>
</view>
